<footer class="bottom-0 bg-gray-100 py-4">
  <div class="max-w-7xl mx-auto py-3 sm:px-4 md:px-4 flex justify-between shadow-sm items-center text-xs text-gray-500 rounded-2xl border border-gray-200">
    <div>
      <p class="font-medium text-gray-600">&copy; 2024 <%= settings.name %>. All rights reserved.</p>
    </div>
    <div>
      <span class="font-thin text-gray-500">
        Powered by
        <a class="transition hover:text-gray-700" href="https://github.com/heliactyloss/heliactyl">Heliactyl</a>
        <span class="bg-gray-200 text-gray-500 px-3 py-1 rounded-full mr-1 ml-2">v<%= settings.version %></span>
        <span class="bg-gray-200 text-gray-500 px-3 py-1 rounded-full" id="loadingTime"></span>
      </span>
    </div>
  </div>
</footer>
<script>
  var before_loadtime = new Date().getTime();
  window.onload = Pageloadtime;

  function Pageloadtime() {
    var aftr_loadtime = new Date().getTime();
    // Time calculating in seconds  
    pgloadtime = (aftr_loadtime - before_loadtime) / 1000

    document.getElementById("loadingTime").innerHTML = pgloadtime + "s";
  }
</script>